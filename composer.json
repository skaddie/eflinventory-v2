{
    "name": "chrisidakwo/efl-inventory",
    "description": "A small-store inventory management and point-of-sale system",
    "keywords": ["store", "inventory", "pos", "sale", "product", "barcode", "scanner", "stock", "batch", "fifo"],
    "license": "MIT",
    "type": "product",
    "require": {
        "php": "^8.0.0",
        "ext-intl": "*",
        "ext-json": "*",
        "ext-openssl": "*",
        "arcanedev/log-viewer": "8.x",
        "darryldecode/cart": "~4.0",
        "fideloper/proxy": "^4.4",
        "intervention/image": "dev-master",
        "laravel/framework": "^8.0",
        "laravel/helpers": "^1.2",
        "laravel/ui": "^3.4",
        "mike42/escpos-php": "^1.6",
        "nao-pon/flysystem-google-drive": "~1.1",
        "phpoffice/phpspreadsheet": "^1.0",
        "rah/danpu": "^2.7"
    },
    "require-dev": {
        "barryvdh/laravel-ide-helper": "^2.8",
        "filp/whoops": "^2.7",
        "friendsofphp/php-cs-fixer": "^2.16",
        "fzaninotto/faker": "^1.9",
        "mockery/mockery": "^1.4",
        "phpunit/phpunit": "^9.3"
    },
    "autoload": {
        "classmap": [
            "database/seeds",
            "database/factories"
        ],
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "dont-discover": [
            ]
        }
    },
    "scripts": {
        "fix": "vendor/bin/php-cs-fixer fix",
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate"
        ],
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover"
        ],
        "post-update-cmd": [
            "Illuminate\\Foundation\\ComposerScripts::postUpdate",
            "@php artisan ide-helper:generate",
            "@php artisan ide-helper:meta"
        ]
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true
    }
}
